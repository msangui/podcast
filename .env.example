# ─── PostgreSQL ───────────────────────────────────────────────
POSTGRES_DB=n8n
POSTGRES_USER=n8n
POSTGRES_PASSWORD=changeme

# ─── n8n Core ─────────────────────────────────────────────────
# Generate with: openssl rand -hex 32
N8N_ENCRYPTION_KEY=

# Local: localhost | Production: your Railway/VPS domain
N8N_HOST=localhost
N8N_PROTOCOL=http

# Full public URL n8n uses for webhooks
# Local:      http://localhost:5678
# Production: https://your-domain.up.railway.app
WEBHOOK_URL=http://localhost:5678

# Your local timezone (used for cron scheduling)
# Examples: America/New_York, Europe/Vienna, America/Chicago
TIMEZONE=America/New_York

# n8n REST API key — generate in n8n UI: Settings → API → Create key
# Used by CFO agent to pause/resume workflows
N8N_API_KEY=

# ─── Anthropic ────────────────────────────────────────────────
ANTHROPIC_API_KEY=

# ─── Telegram ─────────────────────────────────────────────────
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# ─── GitHub ───────────────────────────────────────────────────
# Base URL for fetching prompts/config at runtime
# Format: https://raw.githubusercontent.com/YOUR_USERNAME/YOUR_REPO/main
GITHUB_RAW_BASE_URL=https://raw.githubusercontent.com/msangui/podcast/main

# ─── ElevenLabs (needed for Workflow 1) ───────────────────────
ELEVENLABS_API_KEY=
ELEVENLABS_HANS_VOICE_ID=
ELEVENLABS_FLINT_VOICE_ID=

# ─── Buzzsprout (needed for Workflow 1) ───────────────────────
BUZZSPROUT_API_KEY=
BUZZSPROUT_PODCAST_ID=

# ─── n8n Workflow IDs (populate after creating workflows) ─────
N8N_WORKFLOW_ID_DAILY_PIPELINE=
N8N_WORKFLOW_ID_CONCIERGE=
N8N_WORKFLOW_ID_CFO=
N8N_WORKFLOW_ID_GROWTH=
N8N_WORKFLOW_ID_SOURCE_ROTATION=
